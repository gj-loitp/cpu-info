<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.galaxyjoy.cpuinfo.feature.temperature.TemperatureVM" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tempRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/vi_item_temperature" />

        <ProgressBar
            android:id="@+id/pb"
            style="@style/TintedProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{safeUnbox(viewModel.isLoading) ? View.VISIBLE: View.GONE}" />

        <!--No data-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNoData"
            style="@style/TextH6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/temp_item_margin"
            android:gravity="center"
            android:text="@string/no_temp_data"
            android:visibility="@{safeUnbox(viewModel.isError) ? View.VISIBLE: View.GONE}"
            tools:visibility="visible" />

    </RelativeLayout>

</layout>
